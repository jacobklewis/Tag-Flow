{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ES2020",
        "declaration": true,            // <--- important
        "declarationMap": true,         // optional, helps with debugging
        "strict": true,
        "outDir": "./dist",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "moduleResolution": "node",
        "allowJs": true,           // <--- important
        "resolveJsonModule": true, // <--- important
        "baseUrl": "./",
        "paths": {
          "*": ["*", "*.js"]
        }
    },
    "include": [
      "src/**/*",
    ],
    "exclude": [
      "node_modules",
      "**/*.spec.ts"
    ],
    "ts-node": {
      "esm": true
    }
}